
pulselight SmallRedPulse {
	color 1.0 0.0 0.0
	size 196
	secondarySize 56
	interval 5
	offset 0 32 0
}

pulselight OrangeFlamePulse {
	color 1.0 0.4 0.0
	size 64
	secondarySize 56
	interval 5
	offset 0 32 0
}

object FireGemSet { 
	frame FGEM { 
		light SmallRedPulse 
	} 
}

object FireGemPrepare { 
	frame FGEM { 
		light SmallRedPulse 
	} 
}

object FireGemActive { 
	frame FGEM { 
		light SmallRedPulse 
	} 
}

object FireGemFlame { 
	frame FFIR { 
		light OrangeFlamePulse 
	} 
}




